<h1><%= @track.name %></h1>


<p>
  <%= ugly_lyrics(@track.lyrics).html_safe %>
</p>

<br><br><br>

<h4>Notes</h4>

<% @track.notes.each do |note| %>
  <p>
    <%= note.note_text %>
    <% if note.user_id == current_user.id %>
      <%= link_to "delete", track_note_url(@track.id ,note.id), :method => :delete %>
    <% end %>
  </p>

<% end %>

<%= render "notes/form", track: @track %>

<br>
<%= link_to "Back to Album", album_url(@track.album_id) %>
<br>
<%= link_to "All Bands", bands_url %>
